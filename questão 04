import java.util.Scanner;
public class Main {
  public static void main(String[] args) {
    Scanner input = new Scanner(System.in);
    //entrada de dados
    int paisA = 80000;
    int paisB = 200000;
    double taxaA = 0.03;
    double taxaB = 0.015;
    int anos = 0;

    //processamento
    while (paisA <= paisB) {
      paisA += paisA * taxaA;
      paisB += paisB * taxaB;
      anos++;
    }
    //saída de dados
    System.out.println("A população do país A ultrapassará a população do país B em " + anos + " anos.");
  }
}
    
